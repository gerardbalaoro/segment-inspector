{
  "name": "segment-inspector",
  "version": "0.1.7",
  "description": "A browser extension for debugging Twilio Segment events",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/gerardbalaoro/segment-inspector.git"
  },
  "scripts": {
    "build": "pnpm run build:chrome && pnpm run build:firefox",
    "build:chrome": "tsc --noEmit && vite build",
    "build:firefox": "tsc --noEmit && cross-env __FIREFOX__=true vite build",
    "build:watch": "cross-env __DEV__=true vite build -w --mode development",
    "build:firefox:watch": "cross-env __DEV__=true __FIREFOX__=true vite build -w --mode development",
    "build:hmr": "rollup --config utils/reload/rollup.config.mjs",
    "pack": "ts-node-esm utils/scripts/pack.ts",
    "wss": "node utils/reload/initReloadServer.js",
    "dev": "pnpm build:hmr && (run-p wss build:watch)",
    "dev:firefox": "pnpm build:hmr && (run-p wss build:firefox:watch)",
    "changelog": "conventional-changelog -p angular",
    "version": "pnpm changelog -i CHANGELOG.md -s && git add CHANGELOG.md && git commit -m \"chore: update CHANGELOG.md\"",
    "test": "echo \"No tests.\"",
    "commitlint": "commitlint --edit",
    "lint": "eslint src --ext .ts",
    "lint:fix": "pnpm lint --fix",
    "prettier": "prettier . --write",
    "prepare": "husky install"
  },
  "type": "module",
  "dependencies": {
    "@fontsource/inter": "^5.0.15",
    "@fontsource/roboto-mono": "^5.0.15",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-scroll-area": "^1.0.5",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-tabs": "^1.0.4",
    "@segment/analytics-core": "^1.4.0",
    "@uiw/react-json-view": "2.0.0-alpha.9",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "construct-style-sheets-polyfill": "3.1.0",
    "dayjs": "^1.11.10",
    "lucide-react": "^0.292.0",
    "minimatch": "^9.0.3",
    "radash": "^11.0.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-if": "^4.1.5",
    "tailwind-merge": "^2.0.0",
    "tailwindcss-animate": "^1.0.7",
    "webext-bridge": "^6.0.1",
    "webextension-polyfill": "0.10.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@commitlint/cli": "18.2.0",
    "@commitlint/config-conventional": "18.1.0",
    "@commitlint/types": "^18.4.3",
    "@rollup/plugin-typescript": "11.1.5",
    "@testing-library/react": "14.0.0",
    "@types/chrome": "0.0.248",
    "@types/jest": "29.5.7",
    "@types/node": "20.8.10",
    "@types/react": "18.2.35",
    "@types/react-dom": "18.2.14",
    "@types/webextension-polyfill": "^0.10.7",
    "@types/ws": "8.5.8",
    "@typescript-eslint/eslint-plugin": "6.21.0",
    "@typescript-eslint/parser": "6.9.1",
    "@vitejs/plugin-react": "4.1.1",
    "autoprefixer": "^10.4.16",
    "chokidar": "3.5.3",
    "commander": "^11.1.0",
    "consola": "^3.2.3",
    "conventional-changelog-angular": "^7.0.0",
    "conventional-changelog-cli": "^4.1.0",
    "cross-env": "7.0.3",
    "dotenv": "^16.3.1",
    "eslint": "8.53.0",
    "eslint-config-airbnb-typescript": "17.1.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-import": "2.29.0",
    "eslint-plugin-jsx-a11y": "6.8.0",
    "eslint-plugin-prettier": "5.0.1",
    "eslint-plugin-react": "7.33.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "fs-extra": "11.1.1",
    "globby": "^14.0.0",
    "husky": "8.0.3",
    "jest": "29.7.0",
    "jest-environment-jsdom": "29.7.0",
    "lint-staged": "15.0.2",
    "npm-run-all": "4.1.5",
    "postcss": "^8.4.31",
    "prettier": "3.0.3",
    "prettier-plugin-organize-imports": "^3.2.4",
    "prettier-plugin-tailwindcss": "^0.5.7",
    "rollup": "4.3.0",
    "sass": "1.69.5",
    "sharp": "^0.32.6",
    "tailwindcss": "^3.3.5",
    "ts-jest": "29.1.1",
    "ts-loader": "9.5.0",
    "ts-node": "^10.9.1",
    "tslib": "2.6.2",
    "typescript": "5.2.2",
    "vite": "4.5.0",
    "webext-buildtools-builder-types": "^1.0.11",
    "webext-buildtools-integrated-builder": "^1.0.16",
    "ws": "8.14.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "packageManager": "pnpm@8.9.2"
}
